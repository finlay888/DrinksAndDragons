<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/tutorial_padding"
    android:background="@color/colorPrimaryDark">
    <ImageView
        android:id="@+id/iv_tutorial1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/image_content_description"
        app:layout_constraintBottom_toTopOf="@id/tv_tutorial1"
        />
    <TextView
        android:id="@+id/tv_tutorial1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tutorial4"
        android:textColor="@android:color/white"
        android:textSize="@dimen/largest_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        />
</androidx.constraintlayout.widget.ConstraintLayout>